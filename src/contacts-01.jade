- var mainpage = true

//- //mixins//
mixin aboutitem(header, text)
	.inline-el
		h3.ellipsis-text= header
		p!= text

doctype html
html(lang='en')
	head
		title contacts-01

		include ./partials/head.jade

	body
		include ./partials/preloader.jade
		section.top-line.contacts-sec
			.animate-bg
				.image-holder
					img(src="img/images/contacts-bg.jpg", alt="")
			include ./partials/top-nav.jade
			.table-holder
				.vert-el
					.description-in-top
						h1 
							|Contact Us
							
						img(src="img/icons/waves-icon.svg", class="waves", alt="")
