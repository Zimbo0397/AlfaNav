- var mainpage = true

//- //mixins//
mixin aboutitem(header, text)
	.inline-el
		h3.ellipsis-text= header
		p!= text

doctype html
html(lang='en')
	head
		title careers-01

		include ./partials/head.jade

	body
		include ./partials/preloader.jade
		section.top-line.career-sec
			.animate-bg
				.image-holder
					img(src="img/images/top-line-bg-4.jpg", alt="")
			include ./partials/top-nav.jade
			.table-holder
				.vert-el
					.description-in-top
						h1 
							|WE ARE HIRING! WELCOME TO 
							br
							|YOUR OPPORTUNITY OF A LIFETiME!
						img(src="img/icons/waves-icon.svg", class="waves", alt="")
						h2 
							//- |Regardless of differences, we strive shoulder to shoulder... 
							//- br
							|Teamwork can be summed up in five short words: "We believe in each other"
			include ./partials/down-btn.jade

		section.careers-form
			.main-container
				.text-holder
					p
						|We are a tightly-welded team of 60 enamoured of their mission to deliver success professionals and we are always on the look out for like-minded  persons who are willing to join our on-shore team and take bold steps in the direction of a dream career! 
					p
						|If this sounds like you, say hello to us with an email or complete and submit the form below.  
				.form-holder.inline-holder
					form(action="")
						.form-part.inline-el
							ul
								li
									.input-item
										label First Name
										input(placeholder="Ivan")
								li.mobile
									.input-item
										label Last Name
										input(placeholder="Sidorov")
								li
									.input-item
										label Email
										input(placeholder="mail@mail.com")
								li.mobile
									.input-item
										label Phone
										input(placeholder="+38 (098) 765 43 21")
								li
									.input-item
										label Age
										input(placeholder="45")
								li.mobile
									.input-item.selectable
										label Country
										select
											option(value="1") Ukraine
											option(value="2") Russia
											option(value="3") Andorra
											option(value="4") Denmark
											option(value="5") Estonia
											option(value="6") Germany
											option(value="7") Iceland
								li
									.browse
										button(href="#") Browse
										span  Curriculum Vitae
								li.mobile
									.browse
										button(href="#") Browse
										span  Cover Letter
								li
									.input-item.captcha
										label Captcha
										.image-holder
											img(src="img/images/Captcha.png", alt="")
										a.ref-button(href="#")
											img(src="img/icons/ref-capt-btn.png", alt="")





						.form-part.mobile.inline-el
							ul
								li
									.input-item
										label Last Name
										input(placeholder="Sidorov")
								li
									.input-item
										label Phone
										input(placeholder="+38 (098) 765 43 21")
								li
									.input-item.selectable
										label Country
										select
											option(value="1") Ukraine
											option(value="2") Russia
											option(value="3") Andorra
											option(value="4") Denmark
											option(value="5") Estonia
											option(value="6") Germany
											option(value="7") Iceland
								li
									.browse
										button(href="#") Browse
										span  Cover Letter
						.btn-holder
							button.button
								.t-holder
									span Submit



		




		include ./partials/footer.jade
		include ./partials/call-back-modal.jade





		include ./partials/scripts.jade
